{
  "compilerOptions": {
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowJs": true,
    "strictNullChecks": true,
    "noImplicitReturns": false,
    // get Typescript working global APIs
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "src/**/*",
    "public/card-actions.js"
  ],
  "exclude": [
    "coverage/",
  ],
  "extends": [
    "astro/tsconfigs/strictest"
  ]
}