      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }
      gtag("js", new Date())

      gtag("config", "G-VEBVEDQRH5")
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
